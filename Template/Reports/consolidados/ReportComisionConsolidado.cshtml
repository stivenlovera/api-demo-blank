@using System.Globalization;
@using Microsoft.AspNetCore.Hosting;
@model api_guardian.Dtos.Module.ExportHistorialComisiones;
@inject IWebHostEnvironment _webHostEnvironment;
@{
    //fecha actual del sistema
    var dia = DateTime.Now.ToString("dd", new CultureInfo("es-ES"));
    var mes = DateTime.Now.ToString("MMMM", new CultureInfo("es-ES"));
    var a√±o = DateTime.Now.ToString("yyyy", new CultureInfo("es-ES"));
    //firma vendedor
    decimal totalComision = 0;
    decimal servicio = 0;
    decimal totalComisiones = 0;
    decimal porcentaje13 = 0;
    decimal porcentaje87 = 0;
    decimal totalRetencion = 0;
    decimal total = 0;
    decimal totaPagar = 0;

    foreach (var data in Model.historialComisionConsolidados)
    {
        totalComision += data.TotalComisionVtaPersonal;
        servicio += data.TotalComisionVtaGrupoResidual;
        totalComisiones += data.TotalComision;
        porcentaje13 += data.Valor13;
        porcentaje87 += data.Valor87;
        totalRetencion += data.TotalComisionRetencion;
        total += data.TotalComision;
        totaPagar += data.TotalPagar;
    }
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Reporte Consolidado comision - servicio</title>
    <style>
        table {
            page-break-inside: auto;
            border-collapse: collapse;
            width: 100%;
            border-color: #ececec;
        }

        thead {
            display: table-header-group;
            background-color: #ececec;
            border-color: #ececec;
        }

        th {
            padding: 4px;
            text-align: center;
            border-color: #ececec;
        }

        td {
            padding: 3px;
            border-color: #ececec;
        }

        tr {
            page-break-inside: avoid;
            page-break-after: auto
        }

        .text-left {
            text-align: left;
        }

        .text-right {
            text-align: right;
        }

        .text-center {
            text-align: center;
        }

        body {
            font-family: 'Calibri';
            font-size: 11px;
            text-rendering: geometricPrecision;
            margin-top: 20px;
        }

        .centrado {
            text-align: center;
            margin: 0px;
            padding: 0px;
        }

        .titulo {
            font-size: 20px;
            margin-left: 5%;
            margin-right: 5%;
        }

        .parrafo {
            padding-bottom: 0px;
        }
    </style>
</head>


<body>
    <h4 class="centrado titulo">
        <strong>
            @Model.Nombre
        </strong>
    </h4>
    <br>
    <table>
        <tbody>
            <tr>
                <td width="35%" class="asc" colspan="3">
                    <strong>Nit:</strong>
                </td>
                <td width="35%" class="asc" colspan="3">
                    <strong>Empresa:</strong> @Model.Empresas
                </td>
            </tr>
            <tr>
                <td width="35%" class="asc" colspan="3">
                    <strong>Ciclo:</strong> @Model.NombreCiclo
                </td>
                <td width="35%" class="asc">
                    <strong>Fecha inicio:</strong> @Model.FechaInicioCiclo.ToString("dd/MM/yyyy")
                </td>
                <td width="35%" class="asc">
                    <strong>Fecha fin:</strong> @Model.FechaFinCiclo.ToString("dd/MM/yyyy")
                </td>
            </tr>
        </tbody>
    </table>
    <br>
    <table>
        <thead class="padding">
            <tr>
                <th>
                    Codigo
                </th>
                <th>
                    Empresa
                </th>
                <th>
                    Asesor
                </th>
                <th>
                    Comision $us
                </th>
                <th>
                    Servicio $US
                </th>
                <th>
                    Total comisiones $us
                </th>
                <th>
                    13 %
                </th>
                <th>
                    87 %
                </th>
                <th>
                    Retencion $US
                </th>
                <th>
                    total retencion $US
                </th>
                <th>
                    Total $US
                </th>
                <th>
                    Total pagar $US
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model.historialComisionConsolidados)
            {
                <tr>
                    <td class="text-center">
                        @data.Scodigo
                    </td>
                    <td class="text-center">
                        @data.Empresa
                    </td>
                    <td class="text-left">
                        @data.Snombrecompleto
                    </td>
                    <td class="text-center">
                        @data.TotalComisionVtaPersonal.ToString("0,0.00", CultureInfo.InvariantCulture)
                    </td>
                    <td class="text-center">
                        @data.TotalComisionVtaGrupoResidual.ToString("0,0.00", CultureInfo.InvariantCulture)
                    </td>
                    <td class="text-center">
                        @data.TotalComision.ToString("0,0.00", CultureInfo.InvariantCulture)
                    </td>
                    <td class="text-center">
                        @data.Valor13.ToString("0,0.00", CultureInfo.InvariantCulture)
                    </td>
                    <td class="text-center">
                        @data.Valor87.ToString("0,0.00", CultureInfo.InvariantCulture)
                    </td>
                    <td class="text-center">
                        @data.Retencion.ToString("0,0.00", CultureInfo.InvariantCulture)
                    </td>
                    <td class="text-center">
                        @data.TotalComisionRetencion.ToString("0,0.00", CultureInfo.InvariantCulture)
                    </td>
                    <td class="text-center">
                        @data.TotalComision.ToString("0,0.00", CultureInfo.InvariantCulture)
                    </td>
                    <td class="text-center">
                        @data.TotalPagar.ToString("0,0.00", CultureInfo.InvariantCulture)
                    </td>
                </tr>
            }
            <tr style="background-color: rgb(198, 255, 196)), 69, 69);">
                <td class="text-center" bgcolor="#FDFFEB">
                    Totales
                </td>
                <td class="text-center" bgcolor="#FDFFEB">

                </td>
                <td class="text-left" bgcolor="#FDFFEB">

                </td>
                <td class="text-center" bgcolor="#FDFFEB">
                    @totalComision.ToString("0,0.00", CultureInfo.InvariantCulture)
                </td>
                <td class="text-center" bgcolor="#FDFFEB">
                    @servicio.ToString("0,0.00", CultureInfo.InvariantCulture)
                </td>
                <td class="text-center" bgcolor="#FDFFEB">
                    @totalComisiones.ToString("0,0.00", CultureInfo.InvariantCulture)
                </td>
                <td class="text-center" bgcolor="#FDFFEB">
                    @porcentaje13.ToString("0,0.00", CultureInfo.InvariantCulture)
                </td>
                <td class="text-center" bgcolor="#FDFFEB">
                    @porcentaje87.ToString("0,0.00", CultureInfo.InvariantCulture)
                </td>
                <td class="text-center" bgcolor="#FDFFEB">

                </td>
                <td class="text-center" bgcolor="#FDFFEB">
                    @totalRetencion.ToString("0,0.00", CultureInfo.InvariantCulture)
                </td>
                <td class="text-center" bgcolor="#FDFFEB">
                    @total.ToString("0,0.00", CultureInfo.InvariantCulture)
                </td>
                <td class="text-center" bgcolor="#FDFFEB">
                    @totaPagar.ToString("0,0.00", CultureInfo.InvariantCulture)
                </td>
            </tr>
        </tbody>
    </table>
</body>

</html>