@using System.Globalization;
@using Microsoft.AspNetCore.Hosting;
@model api_guardian.Dtos.Controllers.ReqConsolidadoDto;
@inject IWebHostEnvironment _webHostEnvironment;
@{
    //fecha actual del sistema
    var dia = DateTime.Now.ToString("dd", new CultureInfo("es-ES"));
    var mes = DateTime.Now.ToString("MMMM", new CultureInfo("es-ES"));
    var aÃ±o = DateTime.Now.ToString("yyyy", new CultureInfo("es-ES"));
    //firma vendedor
    var empresas = String.Join(", ", Model.Filtro.Empresas.Select(x => x.Snombre)).ToString();
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Reporte Consolidado comision - servicio</title>
    <style>
        table {
            page-break-inside: auto;
            border-collapse: collapse;
            width: 100%;
            border-color: #ececec;
        }

        thead {
            display: table-header-group;
            background-color: #ececec;
            border-color: #ececec;
        }

        th {
            padding: 4px;
            text-align: center;
            border-color: #ececec;
        }

        td {
            padding: 3px;
            border-color: #ececec;
        }

        tr {
            page-break-inside: avoid;
            page-break-after: auto
        }

        .text-left {
            text-align: left;
        }

        .text-right {
            text-align: right;
        }

        .text-center {
            text-align: center;
        }

        body {
            font-family: 'Calibri';
            font-size: 12px;
            text-rendering: geometricPrecision;
            margin-top: 20px;
        }

        .centrado {
            text-align: center;
            margin: 0px;
            padding: 0px;
        }

        .titulo {
            font-size: 20px;
            margin-left: 5%;
            margin-right: 5%;
        }

        .parrafo {
            padding-bottom: 0px;
        }
    </style>
</head>


<body>
    <h4 class="centrado titulo">
        <strong>
            Reporte Consolidado comision - servicio
        </strong>
    </h4>
    <br>
    <table>
        <tbody>
            <tr>
                <td width="35%" class="asc" colspan="3">
                    <strong>Nit:</strong>
                </td>
                <td width="35%" class="asc" colspan="3">
                    <strong>Empresa:</strong> @empresas
                </td>
            </tr>
            <tr>
                <td width="35%" class="asc" colspan="3">
                    <strong>Ciclo:</strong> @Model.Filtro.Ciclo.snombre
                </td>
                <td width="35%" class="asc">
                    <strong>Fecha inicio ciclo:</strong> @Model.Filtro.Ciclo.dtfechainicio.ToString("dd/MM/yyyy")
                </td>
                <td width="35%" class="asc">
                    <strong>Fecha fin ciclo:</strong> @Model.Filtro.Ciclo.dtfechafin.ToString("dd/MM/yyyy")
                </td>
            </tr>
        </tbody>
    </table>
    <br>
    <table>
        <thead class="padding">
            <tr>
                <th>
                    Codigo
                </th>
                <th>
                    Empresa
                </th>
                <th>
                    Asesor
                </th>
                <th>
                    Comision $us
                </th>
                <th>
                    Servicio $US
                </th>
                <th>
                    13 %
                </th>
                <th>
                    87 %
                </th>
                <th>
                    Retencion $US
                </th>
                <th>
                    total retencion $US
                </th>
                <th>
                    Total $US
                </th>
                <th>
                    Total pagar $US
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model.DataTable)
            {
                <tr>
                    <td class="text-center">
                        @data.Scodigo
                    </td>
                    <td class="text-center">
                        @data.Empresa
                    </td>
                    <td class="text-left">
                        @data.Snombrecompleto
                    </td>
                    <td class="text-center">
                        @data.TotalComisionVtaPersonal
                    </td>
                    <td class="text-center">
                        @data.TotalComisionVtaGrupoResidual
                    </td>
                    <td class="text-center">
                        @data.Valor13
                    </td>
                    <td class="text-center">
                        @data.Valor87
                    </td>
                    <td class="text-center">
                        @data.Retencion
                    </td>
                    <td class="text-center">
                        @data.TotalComisionRetencion
                    </td>
                    <td class="text-center">
                        @data.TotalComision
                    </td>
                    <td class="text-center">
                        @data.TotalPagar
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>